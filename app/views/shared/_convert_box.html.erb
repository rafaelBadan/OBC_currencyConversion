<div class="convert_box">
  <div class="card">
    <div class="card-header text-center">
        <%= image_tag '/logo.png', class: "img-responsive"%>
    </div>
    <div class="card-block">
      <%= form_tag("/convert", method: "post", id: "convert_form") do %>

        <div class="form-group">
          <input type="number" name="amount" id="amount" class="form-control" placeholder="Quantidade ($10)" step="any" required>
        </div>

        <div class="container">
            <div class="row">

                <div class="col-md-10 currency-box">
                  <div class="form-group">
                    <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
                  </div>


                  <div class="form-group">
                    <%= select_tag "currency_destination", options_for_select(currency_select, "EUR"), class: "form-control", id: "currency_destination"%>
                  </div>
                </div>

                <div class="form-group col-md-2 btn-swap" id="swap_currencies">
                    <i class="fa fa-exchange" style="font-size:24px" aria-hidden="true"></i>
                </div>

            </div>
        </div>

        <div class="form-group">
          <input type="text" id="result" name="result" class="form-control" placeholder="Resultado" readonly>
        </div>

      <% end %>
    </div>
  </div>
</div>
